<h1>Public stories</h1>

<div class="row">
  {{#each stories}}
  <div class="col s12 m6 l4">
    <div class="card">
      <div class="right-align">
        {{#if user}}
          {{{editIcon user.id ../user.id id}}}
        {{/if}}
      </div>
      <div class="card-content center-align">
        <div class="card-title">
          <h5>{{title}}</h5>
          <hr>
          <span class="new badge blue" data-badge-caption="comments">{{comments.length}}</span>
        </div>
          <p class="card-text">{{ truncate (stripTags body) 120 }}</p>
          <br>
          <div class="chip">
            <img src="{{user.image}}" alt="Author"> 
            <a href="/stories/user/{{user.id}}">
            {{user.firstName}}
            <span class="hide-on-med-and-down"> {{user.lastName}}</span>
            </a>
          </div>
      </div>
      <br>
      <div class="card-action center-align">
        <a href="/stories/show/{{id}}" class="btn grey btn-small">
          Show story
        </a>
      </div>
    </div>
  </div>
  {{else}}
  <p>No stories found.</p>
  {{/each}}
</div>